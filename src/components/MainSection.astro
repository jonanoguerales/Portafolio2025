---
import MainTitle from "./MainTitle.astro";
import FotoPerfil from "../assets/perfil.webp";
import GitHubIcon from "../assets/icons/GitHubIcon.astro";
import LinkedIn from "../assets/icons/LinkedIn.astro";
import CV from "../assets/icons/CV.astro";
import Email from "../assets/icons/Email.astro";
import SocialBtn from "./SocialBtn.astro";
---

<section
  id="inicio"
  class="min-h-dvh flex items-center justify-center relative px-4"
  aria-label="Sección de presentación"
>
  <div class="max-w-5xl mx-auto animate-fade-in">
    <div class="flex justify-center mb-8">
      <div class="relative animate-[fade-in-blur_3s_ease-out_forwards]">
        <div
          class="absolute -inset-1 bg-cyan-400 rounded-full blur-lg opacity-75 group-hover:opacity-100 transition duration-1000 group-hover:duration-200 animate-pulse"
        >
        </div><div
          class="relative w-40 h-40 md:w-48 md:h-48 rounded-full overflow-hidden border-4"
        >
          <img
            src={FotoPerfil.src}
            alt="Profile"
            class="w-full h-full object-cover"
          />
        </div>
      </div>
    </div>
    <div class="flex flex-col gap-4 items-center text-center">
      <MainTitle />
      <p
        class="text-sm md:text-lg lg:text-xl text-white/80 max-w-3xl mx-auto leading-relaxed mb-4  animate-[fade-in-blur_3s_ease-out_forwards]"
      >
        Especializado en <strong class="text-purple-400 font-semibold"
          >React</strong
        > y
        <strong class="text-cyan-400 font-semibold">.NET</strong> | Construyo aplicaciones
        web escalables con arquitectura limpia
      </p>
          <div
      class="flex items-center gap-2 justify-center mb-8 animate-[fade-in-blur_3s_ease-out_forwards]"
      role="status"
      aria-live="polite"
    >
      <span class="relative flex h-3 w-3" aria-hidden="true">
        <span
          class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"
        >
        </span>
        <span class="relative inline-flex rounded-full h-3 w-3 bg-green-500">
        </span>
      </span>
      <span class="text-green-400 text-sm font-medium">
        Abierto a nuevas oportunidades
      </span>
    </div>
      <div
        class="flex flex-col sm:flex-row gap-4 justify-center items-center animate-[fade-in-blur_3s_ease-out_forwards]"
      >
        <SocialBtn
          href="https://www.linkedin.com/in/jonathannogueralesalburquerque"
        >
          <LinkedIn class="size-4" />
          LinkedIn
        </SocialBtn>
        <SocialBtn href="https://github.com/jonanoguerales">
          <GitHubIcon class="size-4" />
          GitHub
        </SocialBtn>
        <SocialBtn href="mailto:jonathannoguerales@gmail.com">
          <Email class="size-4" />
          jonathannoguerales@gmail.com
        </SocialBtn>
        <SocialBtn href="/cv/CV_Jonathan_Noguerales_Alburquerque.pdf">
          <CV class="size-4" />
          CV
        </SocialBtn>
      </div>
    </div>
    <button
      class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce bg-transparent border-none text-cyan-400"
      aria-label="Scroll to about section"
      ><svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="lucide lucide-arrow-down w-8 h-8 text-purple-400"
        ><path d="M12 5v14"></path><path d="m19 12-7 7-7-7"></path></svg
      ></button
    >
  </div>
</section>
